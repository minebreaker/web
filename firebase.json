{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self' https://cdnjs.cloudflare.com https://www.googletagmanager.com https://fonts.gstatic.com https: 'unsafe-inline'"
          }
        ]
      }
    ]
  }
}
